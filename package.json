{
  "name": "serenity-now",
  "version": "0.1.0",
  "description": "SERENITY NOW! Automatic dependency management for TypeScript monorepos",
  "keywords": [
    "typescript",
    "monorepo",
    "tsconfig",
    "dependencies",
    "project-references",
    "path-mapping",
    "import",
    "workspace",
    "lerna",
    "yarn-workspaces",
    "npm-workspaces",
    "pnpm-workspaces"
  ],
  "homepage": "https://github.com/billie-coop/serenity-now#readme",
  "bugs": {
    "url": "https://github.com/billie-coop/serenity-now/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/billie-coop/serenity-now.git"
  },
  "license": "MIT",
  "author": "Steve",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "glob": "^11.0.0",
    "typescript": "^5.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/node": "^22.13.1",
    "tsx": "^4.20.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "yarn@3.8.7"
}
