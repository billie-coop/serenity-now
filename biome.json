{
  "files": {
    "includes": ["**/*.{js,ts,tsx,jsx,json,md}"],
    "ignore": ["**/node_modules", "**/dist", "**/.moon", "**/coverage"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {},
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noUnusedTemplateLiteral": "off"
      },
      "complexity": {
        "noForEach": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  }
}