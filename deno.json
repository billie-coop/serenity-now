{
  "name": "serenity-now",
  "version": "0.1.2",
  "exports": "./mod.ts",
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt && deno lint && deno check **/*.ts **/*.test.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "rm -rf coverage && deno test --allow-all --coverage=coverage && deno coverage coverage --include=\"^file:.*/src/\" --html",
    "test:watch": "deno test --allow-all --watch",
    "dev": "deno run --watch --allow-read --allow-write --allow-env cli.ts",
    "start": "deno run --allow-read --allow-write --allow-env cli.ts",
    "build-npm": "deno run --allow-all scripts/build_npm.ts"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fmt": "jsr:@std/fmt@^1.0.0",
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "zod": "jsr:@zod/zod@^4.1.12",
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  },
  "fmt": {
    "exclude": [
      "example/",
      "npm/"
    ]
  },
  "lint": {
    "exclude": [
      "example/",
      "npm/"
    ]
  },
  "test": {
    "exclude": [
      "example/",
      "npm/"
    ]
  },
  "exclude": [
    "example/",
    "npm/",
    "cli_node.ts"
  ]
}
